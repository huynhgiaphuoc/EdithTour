@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="parallax-intro">
                <p class="titlecontent">Information</p>
                <p class="under-border"></p>
            </div>
        </div>
    </div>
